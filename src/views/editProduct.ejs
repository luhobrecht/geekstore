<!DOCTYPE html>
<html lang="es">
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="/css/admin.css">
    <title>Editar producto - Geek Store</title>
<body>
    <%- include("partials/header.ejs") %>
<main>   
    <form id="form" action="/productos/<%= product.id %>/editar?_method=PUT" method="POST" enctype="multipart/form-data">
        <br/>       
        <nav>
        <h2>EDITAR PRODUCTO</h2>
        <div class="nombre">         
            <label for="name"></label>
            <input placeholder="Nombre del producto" type="text" name="name" id="nombre" value="<%= product.name %>">
            <% if (locals.errors && errors.name) {%>
                <p id="errores">
                    <%= errors.name.msg %> 
                </p>   
            <% } %> 
            <p class="nameError errores "></p>
            <label for="description"></label>
            <textarea name="description"  id="description" >
            <%= product.description%>
            </textarea>
            <% if (locals.errors && errors.description) {%>
                <p id="errores">
                    <%= errors.description.msg %> 
                </p>   
            <% } %>
            <p class="descriptionError errores "></p> 
        </div>                    
        </div>  
        <h3 class="foto">Imagen</h3>   
        <div class="foto-archivo">
        <input type="file" name="img" id="archivo" accept=".png, .jpeg, .jpg, .gif" >   
        </div>           
        <br/>         
            <label for="precio" class="precio"> Precio </label>
            <input placeholder="Precio" type="number" name="price" id="precio" value="<%= product.price %>">
            <p class="priceError errores "></p>

            <label for="descuento" class="descuento"> Descuento </label>
            <input placeholder="Descuento" type="number" name="discount" id="descuento" value="<%= product.discount %>">
            <p class="discountError errores "></p>


        <div class="agregar">      
            <input type="submit" name="submit" id="agregar" value="EDITAR PRODUCTO"> </input>
            <br/>
            <input type="reset" name="reset" id="borrar" value="BORRAR"> </input>
            <br/>
            <a href="/"><button id="vuelvo">Volver a Pagina Principal</button></a>
        </div>       
        </nav>
    </form>  
    <form id="borrarProducto" action="/productos/<%= product.id %>/delete?_method=DELETE" method="POST">
        <button id="eliminar">Eliminar producto</button>
    </form>  
</main> 
 
<%- include("partials/footer.ejs") %>
<script src="/js/editProduct.js"></script>
</body>
</html>

